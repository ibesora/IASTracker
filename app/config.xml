<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ic5team.iastracker" version="0.0.1" android-versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IASTracker</name>
    <description>
        The IASTracker ic5Team project
    </description>
    <icon src="res/IASTRACKER-map_V_Ok.png" platform="ios" width="57" height="57" density="mdpi" />
    <author email="dev@altersport.cat" href="http://www.altersport.cat">
        Alter Sport
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="19" />
    <platform name="android">
        <splash src="res/splash.png" density="port-hdpi"/>
        <splash src="res/splash.png" density="port-ldpi"/>
        <splash src="res/splash.png" density="port-mdpi"/>
        <splash src="res/splash.png" density="port-xhdpi"/>
        <allow-intent href="market:*" />
		<preference name="KeepRunning" value="false"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
